@using Factory.Models;

<h2>Machines</h2>
<p style="text-align: center;">Click an Machines's name see it's details!<p>

<div class="list">
<br>
@if (@Model.Count == 0)
{
  <h4>No machines have been added yet!</h4>
}
else
{
  <ul>
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
  }
  </ul>
}
</div>
<br>

<div class="view-nav">
<button>@Html.ActionLink("Add new Machine", "Create")</button>
</div>
