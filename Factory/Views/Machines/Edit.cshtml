
@model Factory.Models.Machine

<h2>Edit Machine</h2>

<h4>Edit @Model.MachineName</h4>

<p>@Html.ValidationMessageFor(model => model.MachineName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.MachineName)
  @Html.EditorFor(model => model.MachineName)

  <input type="submit" value="Save" />
}

<button>@Html.ActionLink("Back to Machine list", "Index")</button>