@using Factory.Models;

<h2>Engineers</h2>
<p style="text-align: center;">Click an Engineer's name see their details!<p>

<div class="list">
<br>
@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
  }
  </ul>
}
</div>
<br>

<div class="view-nav">
<button>@Html.ActionLink("Add new Engineer", "Create")</button>
</div>
