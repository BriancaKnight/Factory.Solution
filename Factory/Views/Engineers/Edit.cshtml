
@model Factory.Models.Engineer

<h2>Edit Engineer</h2>

<h4>Edit @Model.EngineerName</h4>

<p>@Html.ValidationMessageFor(model => model.EngineerName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.EngineerName)
  @Html.EditorFor(model => model.EngineerName)

  <input type="submit" value="Save" />
}

<div class="view-nav">
<button>@Html.ActionLink("Back to Engineer list", "Index")</button>
</div>